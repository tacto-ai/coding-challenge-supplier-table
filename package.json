{
  "name": "frontend-coding-challange",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "lint": "eslint --cache .",
    "pretty": "eslint --write index.html",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "mockdata": "json-server --watch mock-server/data.json -p 3001",
    "serve:api": "serve -s api-spec/build -p 8099",
    "generate:api": "yarn lint:api && yarn build:api && yarn && yarn validate:api",
    "lint:api": "openapi lint api-spec/src/openapi-spec.yaml",
    "build:api": "openapi bundle -o api-spec/build/openapi api-spec/src/openapi-spec.yaml",
    "test:api": "swagger-cli validate api-spec/build/openapi.yaml",
    "validate:api": "docker run --rm -v $PWD:/local openapitools/openapi-generator-cli:v5.4.0 validate -i /local/api-spec/build/openapi.yaml --recommend"
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.6.2",
    "@mui/material": "^5.6.3",
    "lodash": "^4.17.21",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tss-react": "^3.6.2",
    "zustand": "^4.0.0-rc.1"
  },
  "devDependencies": {
    "@redocly/openapi-cli": "^1.0.0-beta.95",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/lodash": "^4.14.182",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vitejs/plugin-react": "^1.3.2",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest-dom": "^3.9.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.6.0",
    "json-server": "^0.17.0",
    "prettier": "^2.6.2",
    "serve": "^13.0.2",
    "swagger-cli": "^4.0.4",
    "typescript": "^4.6.4",
    "vite": "^2.9.16",
    "vite-plugin-eslint": "^1.6.0"
  }
}
